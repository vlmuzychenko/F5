extends layouts/_layout
block content
   // BEGIN card
   .card
      .card__more.js-info
         button.card__btn.js-open-info
            +icon('icon-arrow')
         .card__info.js-scroll

            .card__label Riva Duchessa
            .card__data
               .card__text
                  .card__title Riva Duchessa
                  .card__price 20 000 грн/день
               .card__info-col
                  .card__info-item
                     .card__info-pic.card__info-pic--type
                     .card__info-title Тип
                     .card__info-descr sailing
                  .card__info-item
                     .card__info-pic.card__info-pic--length
                     .card__info-title Длина
                     .card__info-descr 10.36 м
                  .card__info-item
                     .card__info-pic.card__info-pic--speed
                     .card__info-title Скорость
                     .card__info-descr макс. 28 узлов
                     .card__info-descr круизная 18 узлов
                  .card__info-item
                     .card__info-pic.card__info-pic--cabin
                     .card__info-title Кают
                     .card__info-descr 1
                  .card__info-item
                     .card__info-pic.card__info-pic--sleeps
                     .card__info-title Спальных мест
                     .card__info-descr 2+2
                  .card__info-item
                     .card__info-pic.card__info-pic--shower
                     .card__info-title WC/Душ
                     .card__info-descr 1
                  .card__info-item
                     .card__info-pic.card__info-pic--engine
                     .card__info-title Двигатель
                     .card__info-descr GM 8.1L (496cid) 525 л.с.
                  .card__info-item
                     .card__info-pic.card__info-pic--location
                     .card__info-title Локация
                     .card__info-descr о. Крк (Хорватия)
                     a.card__info-link(href='#') Показать на карте
               .card__info-inner
                  .card__feature
                     .card__feature-title Навигация:
                     .card__feautre-text Подруливающее устройство
                     .card__feautre-text  Тип грота
                     .card__feautre-text  Автопилот
                  .card__feature
